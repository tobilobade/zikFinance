<script>
  // Check if the user is logged in and their address matches the contract owner's address
  async function checkOwnerAddress() {
      try {
          const accounts = await ethereum.request({ method: 'eth_requestAccounts' });
          const userAddress = accounts[0];

          console.log(userAddress)
  
          // Replace 'your_owner_address' with the actual address the contract was created with
          const contractOwnerAddress = '0x45742BaCd53496eFFeB1a1e4839a66962Dead0b5';
  
          if (userAddress.toLowerCase() === contractOwnerAddress.toLowerCase()) {
            document.getElementById('ownerLink').style.display = 'block';
        } else {
            // If the user is logged in but their address does not match the contract owner's address, hide the "Owner" link
            document.getElementById('ownerLink').style.display = 'none';
        }
    }  catch (error) {
          console.error('Error checking owner address:', error);
          // Handle error
      }
  }
  
  // Call the function when the page loads
  window.onload = checkOwnerAddress;
