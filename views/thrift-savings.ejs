<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Splitter</title>
    <link rel='stylesheet' href='/stylesheets/thrift-savings.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <% include partials/header.ejs %>

    <div class="thrift-contatiner">
      <h1>Boss, Track Thrift Savings of you and friends</h1>
      <img src="../images/Coins-bro.png" height="300px">
  </div>

    <div id="container" class="container">
        <h1 class="text-center">Thrift Savings Tracker</h1>
        <div id="groupContainer" class="group-container"></div> <!-- Container for group cards -->
        <div id="contribution" class="contribution">
          <h2 class="subtitle">Contribute Money</h2>
          <select id="groupSelect" class="group-select">
            <!-- Dropdown menu for selecting group -->
          </select>
          <input type="text" id="userId" placeholder="User ID" class="input-field">
          <input type="number" id="amount" placeholder="Amount" class="input-field">
          <button id="contributeBtn" class="btn btn-primary">Contribute</button>
        </div>
        <div id="balances" class="balances">
          <h2 class="subtitle">User Balances</h2>
          <ul id="balanceList" class="balance-list"></ul>
        </div>
        <div id="createGroup" class="create-group">
          <h2 class="subtitle">Create Group</h2>
          <input type="text" id="groupNameInput" placeholder="Group Name" class="input-field">
          <div id="membersInput" class="members-input">
            <input type="text" class="memberId input-field" placeholder="User ID">
            <input type="text" class="memberName input-field" placeholder="User Name">
          </div>
          <button id="addMemberBtn" class="btn btn-secondary">Add Member</button>
          <button id="createGroupBtn" class="btn btn-primary">Create Group</button>
        </div>
    </div>

    <script src="/javascripts/thrift-savings.js"></script>
    <script src="/javascripts/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/web3@1.3.0/dist/web3.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
